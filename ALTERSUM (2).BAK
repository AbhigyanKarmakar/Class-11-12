#include <iostream.h>
#include <conio.h>
int Altersum (int array[100][100],int row,int column)
{
  int sum=0;
  if (row%2==0)
    for (int i=0,j=0 ; ; i+=2)
    {
      if (i>=row)
      {
			 j++;
			 i=0;
			 if (j==column)
				 break;
			}
			sum+=array[j][i];
		}
	else
		for (int i=0,j=0 ; ; i+=2)
		{
			 if (i>=row)
			 {
				j++;
				i=(j%2);
				if (j==column)
					break;
			 }
			 sum+=array[j][i];
		}
	return sum;
}
